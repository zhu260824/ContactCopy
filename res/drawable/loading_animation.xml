  	<item android:drawable="@drawable/loading003" android:duration="50"></item>
  	<item android:drawable="@drawable/loading004" android:duration="50"></item>
  	<item android:drawable="@drawable/loading005" android:duration="50"></item>
  	<item android:drawable="@drawable/loading006" android:duration="50"></item>
  	<item android:drawable="@drawable/loading007" android:duration="50"></item>
  	<item android:drawable="@drawable/loading008" android:duration="50"></item>
  	<item android:drawable="@drawable/loading009" android:duration="50"></item>
  	<item android:drawable="@drawable/loading010" android:duration="50"></item>
  	<item android:drawable="@drawable/loading011" android:duration="50"></item>
  	<item android:drawable="@drawable/loading012" android:duration="50"></item>
  	
</animation-list>
